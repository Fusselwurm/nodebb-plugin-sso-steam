{
  "id": "nodebb-plugin-sso-steam",
  "name": "Steam SSO (OpenID)",
  "description": "Allows users to login/register via their Steam account.",
  "url": "https://github.com/igorprado/nodebb-plugin-sso-steam",
  "library": "./library.js",
  "hooks": [
    {
      "hook": "filter:auth.init", "method": "getStrategy", "callbacked": false
    },
    {
      "hook": "filter:admin.header.build", "method": "addMenuItem", "callbacked": false
    },
    {
      "hook": "filter:admin.create_routes", "method": "addAdminRoute", "callbacked": true
    }
  ],
  "staticDirs": ["./static"]
}